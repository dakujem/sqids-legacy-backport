{
    "name": "dakujem/sqids-legacy-backport",
    "description": "Backport of sqids/sqids for PHP 7.4 and PHP 8.0",
    "license": "MIT",
    "keywords": [
        "sqids",
        "hashids",
        "generate",
        "encode",
        "decode",
        "sqids",
        "ids",
        "php74",
        "backport"
    ],
    "homepage": "https://sqids.org/php",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mbstring": "*"
    },
    "replace": {
        "sqids/sqids": "self.version"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "suggest": {
        "ext-bcmath": "Required to use BC Math arbitrary precision mathematics (*).",
        "ext-gmp": "Required to use GNU multiple precision mathematics (*)."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sqids\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sqids\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
